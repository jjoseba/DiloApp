<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/cards_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".CardsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:background="@color/topbar">

        <org.lucasr.twowayview.TwoWayView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/selected_cards_list"
            style="@style/TwoWayView"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:drawSelectorOnTop="false"
            tools:context=".CourseIndexActivity"
            android:cacheColorHint="#00000000"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:id="@+id/removeLastCard"
            android:src="@android:drawable/ic_input_delete" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <com.jjoseba.pecsmobile.ui.SmoothScrollerViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/shadowbottom"
            android:scaleType="fitXY" />

    </FrameLayout>
</LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/newCardContainer"
        android:visibility="gone">

        <fragment android:name="com.jjoseba.pecsmobile.fragment.NewCardFragment"
            android:id="@+id/new_card_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/activity_new_card" />
    </FrameLayout>


</FrameLayout>
